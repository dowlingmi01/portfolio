<p style="color: green"><%= notice %></p>

<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Blog Title</th>
      <th>Body</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <body>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td><%= link_to blog.status, toggle_status_blog_path(blog) %></td>
        <td><%= link_to "Show", blog %></td>
        <td><%= link_to "Edit", edit_blog_path(blog) %></td>
        <td><%= link_to "Delete Post", blog, method: :delete, data: { confirme: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </body>
</table>
<br>
<%= link_to "New blog", new_blog_path %>
